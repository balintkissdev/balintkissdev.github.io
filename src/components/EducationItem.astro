---
const {
  institute,
  location,
  degree,
  duration,
  specialization,
  thesisLevel,
  thesisTitle,
  research,
} = Astro.props;
---

<div
  class="flex flex-col sm:grid grid-cols-12 gap-4 border-solid rounded-lg border-2 p-4 mb-8"
>
  <div class="col-span-10 mb-4">
    <h3 class="text-xl">{institute}</h3>
    <p class="text-gray-500">{location}</p>
    <div class="pt-1 col-span-2">
      <h4 class="">{degree}</h4>
      <p class="py-2 font-bold">{duration}</p>
    </div>
    <p class="pb-2">
      {specialization}
    </p>
    <p>
      {thesisLevel} thesis: <i>{thesisTitle}</i>
    </p>
    <p>
      Participated in <i>{research}</i> research project.
    </p>
  </div>
</div>
