---
import Badge from "./Badge.astro";

interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<div class="flex flex-col sm:flex-row py-2">
  <div class="sm:flex-grow-0 sm:flex-shrink-0 sm:w-[25%] font-bold">
    {title}
  </div>
  <div class="sm:flex-grow-0 sm:flex-shrink-0 sm:w-[66.66666667%]">
    {skills.map((s) => <Badge>{s}</Badge>)}
  </div>
</div>
